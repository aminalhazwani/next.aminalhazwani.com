{% for post in collections.posts | reverse %}
<section>
  <h2>{% if post.data.published == true %}<a href="{{ post.url | url }}">{{ post.data.title }} →</a>{% else %}{{ post.data.title }}{% endif %}</h2>
  <p>{{ post.data.description }}</p>
  <figure>
    <img src="{{ post.data.cover }}" alt="{{ post.data.alt }}" />
    {% if post.data.caption %}
    <figcaption>{{ post.data.caption }}</figcaption>
    {% endif %}
  </figure>
</section>
{% endfor %}
